/* miniprogram/pages/test/test.wxss */

.progress-box {
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: center;
  height: 30rpx;
}

.progress-box view {
  min-width: 100rpx;
}

.progress-box view:first-child {
  border-radius: 14rpx 0 0 14rpx;
}

.progress-box view:last-child {
  border-radius: 0 14rpx 14rpx 0;
}

.done {
  background: #fcc975;
}

.main {
  text-align: center;
  margin-top: 100rpx;
}

.main image {
  width: 590rpx;
  height: 442rpx;
}

.word-box {
  width: 590rpx;
  margin: 45rpx auto;
}

.word {
  font: 500 48rpx/67rpx 'PingFangSC-Regular';
}

.btn-box {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  margin-left: -60rpx;
  width: 120rpx;
  height: 120rpx;
  background: rgba(243, 159, 89, 1);
  box-shadow: 0 2rpx 8rpx 0 rgba(243, 159, 89, 1);
  border-radius: 50%;
}
.recording{
  transform: scale(1.2);
  transition: all 0.2s initial;
  background: #36C621;
  box-shadow: 0 2rpx 8rpx 0 #36C621;
}
.mc{
  width: 38rpx;
  height: 60rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: url(data:image/png;base64,) no-repeat center;
  background-size: 100%;
  z-index: 100;
}
